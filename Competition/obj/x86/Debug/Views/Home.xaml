<Page x:ConnectionId='1'
    x:Class="Competition.Views.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Competition.Views"
    xmlns:d="[图片]http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="using:Competition.Models"
    mc:Ignorable="d">

    <Grid Background="#409eff">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='2' x:Name="Info" Grid.Row="0" Text="" VerticalAlignment="Center" TextAlignment="Center" TextDecorations="Underline" FontSize="25"/>
        <GridView x:ConnectionId='3' x:Name="listView" Grid.Row="1" HorizontalAlignment="Center" IsItemClickEnabled="True"                                                                            >
            <GridView.ItemTemplate>
                <DataTemplate                        >
                    <Grid x:ConnectionId='4' Height="200" Width="200">
                        <Grid.Background>
                            <ImageBrush ImageSource="../Assets/matchbackground.jpg"/>
                        </Grid.Background>
                        <TextBlock x:ConnectionId='5'                            VerticalAlignment="Top" HorizontalAlignment="Center"/>
                        <TextBlock x:ConnectionId='6'                      VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="开始时间：" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <TextBlock x:ConnectionId='7'                           VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

