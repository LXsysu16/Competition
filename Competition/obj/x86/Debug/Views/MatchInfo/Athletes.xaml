<Page x:ConnectionId='1'
    x:Class="Competition.Views.MatchInfo.Athletes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Competition.Views.MatchInfo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock x:ConnectionId='2' x:Name="Title" Text="运动员信息" Margin="0 20 0 20" HorizontalAlignment="Center" Style="{StaticResource Header}"/>


            <ListView x:ConnectionId='3' x:Name="AthletesListView"
                Width="Auto" 
                Background="#20acff"
                Foreground="White"
                Visibility="Visible"
                Margin="50 0 50 0"
                SelectionMode="None"
                ItemTemplate="{StaticResource AthletesDataTemplate}" 
                                                             />
        </StackPanel>
    </Grid>
</Page>
 

