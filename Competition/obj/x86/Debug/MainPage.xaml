<Page
    x:Class="Competition.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Competition"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <RelativePanel Grid.Row="0" Style="{StaticResource TopBar}">
                <!-- Menu -->
                <AppBarButton x:ConnectionId='3' Icon="GlobalNavigationButton"
                                           
                        RelativePanel.AlignLeftWithPanel="true"
                        RelativePanel.AlignVerticalCenterWithPanel="True"
                        Background="Transparent"
                        Margin="-10 0 0 -5">
                </AppBarButton>
                <TextBlock Text="Competition" Style="{StaticResource Header}" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                <AppBarButton x:ConnectionId='4' x:Name="VolumnButton" Icon="Contact" RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignRightWithPanel="True" Margin="0 0 0 -5">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:ConnectionId='5' Text="SignIn"                               />
                            <MenuFlyoutItem x:ConnectionId='6' Text="LogOut"                               />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </RelativePanel>
            <SplitView x:ConnectionId='1' Grid.Row="1" Name="menuView" DisplayMode="CompactOverlay" CompactPaneLength="48" OpenPaneLength="150">
                <SplitView.Pane>
                    <Grid Style="{StaticResource LeftBar}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ListView x:ConnectionId='2' Grid.Row="0" IsItemClickEnabled="True"                               >

                            <ListViewItem>
                                <!-- Home -->
                                <StackPanel Orientation="Horizontal">
                                    <SymbolIcon Symbol="Home" />
                                    <TextBlock Text="Home" 
                                               Margin="24,0,0,0"  
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem>
                                <StackPanel Orientation="Horizontal" >
                                    <SymbolIcon Symbol="People" />
                                    <TextBlock Text="Athletes"  
                                               Margin="24,0,0,0"  
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem>
                                <StackPanel Orientation="Horizontal" >
                                    <SymbolIcon Symbol="List" />
                                    <TextBlock Text="Battle"  
                                               Margin="24,0,0,0"  
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem>
                                <StackPanel Orientation="Horizontal" >
                                    <SymbolIcon Symbol="Calendar" />
                                    <TextBlock Text="Result"  
                                               Margin="24,0,0,0"  
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem>
                                <StackPanel Orientation="Horizontal" >
                                    <SymbolIcon Symbol="Video" />
                                    <TextBlock Text="Video"  
                                               Margin="24,0,0,0"  
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </ListViewItem>
                        </ListView>
                        <ListViewItem Grid.Row="1">
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Import" />
                                <TextBlock Text="Out"  
                                               Margin="24,0,0,0"  
                                               VerticalAlignment="Center" />
                            </StackPanel>
                        </ListViewItem>
                    </Grid>
                </SplitView.Pane>
                <Border Background="LightGray">
                    <TextBlock Text="Content" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </SplitView>
        </Grid>
    </Grid>
</Page>

