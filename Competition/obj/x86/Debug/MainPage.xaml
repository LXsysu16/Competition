<Page
    x:Class="Competition.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Competition"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <RelativePanel Grid.Row="0" Style="{StaticResource TopBar}">
                <!-- Menu -->
                <AppBarButton x:ConnectionId='9' Icon="GlobalNavigationButton"
                                           
                        RelativePanel.AlignLeftWithPanel="true"
                        RelativePanel.AlignVerticalCenterWithPanel="True"
                        Background="Transparent"
                        Foreground="White"
                        Margin="-10 0 0 -5">
                </AppBarButton>
                <TextBlock Text="Competition" Style="{StaticResource Header}" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                <AppBarButton x:ConnectionId='10' x:Name="VolumnButton" Icon="Contact" RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignRightWithPanel="True" Margin="0 0 0 -5" Foreground="White">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:ConnectionId='11' Text="SignIn"                               />
                            <MenuFlyoutItem x:ConnectionId='12' Text="LogOut"                               />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </RelativePanel>
            <SplitView x:ConnectionId='1' Grid.Row="1" Name="menuView" DisplayMode="CompactInline"  CompactPaneLength="48" OpenPaneLength="150">
                <SplitView.Pane>
                    <Grid Style="{StaticResource LeftBar}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0">
                        <!-- 一级菜单 -->
                        <ListView x:ConnectionId='3' Name="NavMenuPrimaryListView" 
                              SelectionMode="None" IsItemClickEnabled="True" 
                              ItemTemplate="{StaticResource MenuItemDataTemplate}" 
                              ItemContainerStyle="{StaticResource NavMenuItemContainerStyle}"
                                                                   />
                        <!-- Football二级菜单-->
                        <ListView x:ConnectionId='4' Name="NavMenuSecondaryFootballListView" 
                              Margin="10 0 0 0"
                              Visibility="Collapsed"
                              SelectionMode="None" IsItemClickEnabled="True" 
                              ItemTemplate="{StaticResource MenuItemDataTemplate}" 
                              ItemContainerStyle="{StaticResource NavMenuItemContainerStyle}"    
                              BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" BorderThickness="0,1,0,0" 
                                                                      />

                        <!-- Football三级菜单 -->
                        <ListView x:ConnectionId='5' Name="FootballInfoListView" 
                                 Margin="20 0 0 0"
                                 Visibility="Collapsed"
                                 SelectionMode="None" IsItemClickEnabled="True" 
                                 ItemTemplate="{StaticResource MenuItemDataTemplate}" 
                                 ItemContainerStyle="{StaticResource NavMenuItemContainerStyle}"
                                 BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" BorderThickness="0,1,0,0" 
                                                                       />

                        <!-- Tennis二级菜单 -->
                        <ListView x:ConnectionId='6' Name="NavMenuSecondaryTennisListView"
                              Margin="10 0 0 0"
                              Visibility="Collapsed"
                              SelectionMode="None" IsItemClickEnabled="True" 
                              ItemTemplate="{StaticResource MenuItemDataTemplate}" 
                              ItemContainerStyle="{StaticResource NavMenuItemContainerStyle}"    
                              BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" BorderThickness="0,1,0,0" 
                                                                      />
                        
                        <!-- Tennis三级菜单 -->
                        <ListView x:ConnectionId='7' Name="TennisInfoListView" 
                                 Margin="20 0 0 0"
                                 Visibility="Collapsed"
                                 SelectionMode="None" IsItemClickEnabled="True" 
                                 ItemTemplate="{StaticResource MenuItemDataTemplate}" 
                                 ItemContainerStyle="{StaticResource NavMenuItemContainerStyle}"
                                 BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" BorderThickness="0,1,0,0" 
                                                                     />
                        </StackPanel>
                        <!--底部菜单-->
                        <ListView x:ConnectionId='2' Name="NavMenuLogOutListView" 
                              Grid.Row="1"
                              SelectionMode="None" IsItemClickEnabled="True" 
                              ItemTemplate="{StaticResource MenuItemDataTemplate}" 
                              ItemContainerStyle="{StaticResource NavMenuItemContainerStyle}" 
                              BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" BorderThickness="0,1,0,0" 
                                                                   />
                    </Grid>
                </SplitView.Pane>
                <Border Background="LightGray">
                    <Frame x:ConnectionId='8' Name="ContentFrame" />
                </Border>
            </SplitView>
        </Grid>
    </Grid>
</Page>

